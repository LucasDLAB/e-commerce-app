<title>Criação de nova linha na tabela de preço</title>

<h2>Criação de linha na tabela de preço</h2>

<% if @table_price_line.errors.any?%>
  <div>
    <p>Verifique os erros abaixo:</p>
    <ul>
      <% @table_price_line.errors.full_messages.each do |msg| %>
        <li>
          <%= msg%>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @table_price_line) do |tpl|%>
	<div>
    <%= tpl.label :minimum_weight%>
    <%= tpl.number_field :minimum_weight%>
  </div>

   <div>
    <%= tpl.label :max_weight%>
    <%= tpl.number_field :max_weight%>
  </div>

  <div>
    <%= tpl.label :minimum_height%>
    <%= tpl.number_field :minimum_height%>
  </div>

  <div>
    <%= tpl.label :max_height%>
    <%= tpl.number_field :max_height%>
  </div>

  <div>
    <%= tpl.label :minimum_width%>
    <%= tpl.number_field :minimum_width%>
  </div>

  <div>
    <%= tpl.label :max_width%>
    <%= tpl.number_field :max_width%>
  </div>

  <div>
    <%= tpl.label :minimum_length%>
    <%= tpl.number_field :minimum_length%>
  </div>

  <div>
    <%= tpl.label :max_length%>
    <%= tpl.number_field :max_length%>
  </div>


  <div>
    <%= tpl.label :price%>
    <%= tpl.number_field :price%>
  </div>

  <div>
    <%=tpl.submit "Adicionar linha"%>
  </div>
<%end%>

<%= link_to "Voltar para a página da transportadora", shipping_company_path(current_user.id)%>