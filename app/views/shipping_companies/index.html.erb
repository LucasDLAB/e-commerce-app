<title>Transportadoras Filiadas</title>

<h2>Transportadoras Filiadas</h2>

<nav>
<%= link_to "Cadastrar uma nova Transportadora", new_shipping_company_path%>	
</nav>

<div>
	<%if @shipping_companies.any?%>

		<%@shipping_companies.each do |s|%>
			<div>
				<table>
					<tr>
						<td><%= ShippingCompany.human_attribute_name(:corporate_name)%></td>
						<td><%= ShippingCompany.human_attribute_name(:registration_number)%></td>
					</tr>
					
					<tr>
						<td><%= link_to s.corporate_name, s%></td>
						<td><%= s.registration_number%></td>
					</tr>
				</table>
			</div>
		<%end%>

	<%else%>
		
		<p>Nenhuma transportadora cadastrada</p>
	
	<%end%>
</div>

