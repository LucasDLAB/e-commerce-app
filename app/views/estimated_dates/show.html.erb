<title>Tabela de estimativa de entrega</title>

<h2>Tabela de estimativa de entrega: Transportadora <%=@endereco.corporate_name%></h2>

<%if @estimated_date_lines != []%>
	<div>
		<table>
				<tr>
					<td><%= EstimatedDate.human_attribute_name(:min_distance)%></td>
					<td><%=EstimatedDate.human_attribute_name(:max_distance)%></td>
					<td><%=EstimatedDate.human_attribute_name(:business_day)%></td>
				</tr>
					
				<%@estimated_date_lines.each do |ed|%>
					<tr>
						<td><%= ed.min_distance%> Km</td>
						<td><%= ed.max_distance%> Km</td>
						<td><%= ed.business_day%></td>
					</tr>
				<%end%>
			</table>
	</div>
<%else%>
	<p>Tabela de estimativa de entrega não possui linhas adicionadas</p>
<%end%>

<%= link_to "Voltar para a página da transportadora", shipping_company_path(params[:id])%>